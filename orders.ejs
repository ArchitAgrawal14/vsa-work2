<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-collage {
            position: relative;
            overflow: hidden;
        }
        .card-collage img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: auto;
            object-fit: cover;
        }
        .card-collage .collage-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.3);
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .card-collage .collage-overlay h5 {
            margin: 0;
        }
    </style>
</head>
<body>
    <h2>Current Orders</h2>
    <% if (ordersDataOngoing.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% ordersDataOngoing.forEach(order => { %>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="card-collage">
                                <% order.items.forEach((item, index) => { %>
                                    <img src="<%= item.img %>" class="card-img-top" alt="<%= item.name %>" style="z-index: <%= order.items.length - index %>;">
                                <% }) %>
                                <div class="collage-overlay">
                                    <h5>Order ID: <%= order.order_id %></h5>
                                </div>
                            </div>
                            <p class="card-text">Click on the card to view details</p>
                        </div>
                        <div class="card-footer">
                            <a href="/orderDetailsUser?order_id=<%= order.order_id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <h2>No orders yet</h2>
    <% } %>

    <h2>Previous Completed Orders</h2>
    <% if (ordersDataDelivered.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% ordersDataDelivered.forEach(order => { %>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="card-collage">
                                <% order.items.forEach((item, index) => { %>
                                    <img src="<%= item.img %>" class="card-img-top" alt="<%= item.name %>" style="z-index: <%= order.items.length - index %>;">
                                <% }) %>
                                <div class="collage-overlay">
                                    <h5>Order ID: <%= order.order_id %></h5>
                                </div>
                            </div>
                            <p class="card-text">Click on the card to view details</p>
                        </div>
                        <div class="card-footer">
                            <a href="/orderDetailsUser?order_id=<%= order.order_id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <h2>No completed orders yet</h2>
    <% } %>
</body>
</html>
